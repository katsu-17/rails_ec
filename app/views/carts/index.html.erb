<div class="container">
  <main>
    <div class="py-5 text-center">
      <%= image_tag "bootstrap-logo.svg", class: "d-block mx-auto mb-4", alt: "", width: "72", height: "57" %>
      <h2>Checkout form</h2>
      <p class="lead">Below is an example form built entirely with Bootstrap’s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p>
    </div>
    <div class="row g-5">
      <div class="col-md-5 col-lg-4 order-md-last">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-primary">Your cart</span>
          <span class="badge bg-primary rounded-pill"><%= current_cart.cart_items.count %></span>
        </h4>
        <ul class="list-group mb-3">
          <% current_cart.cart_items.each do |cart_item| %>
            <li class="list-group-item d-flex justify-content-between lh-sm">
              <div>
                <h6 class="my-0"><%= cart_item.name %> x <%= cart_item.num %></h6>
                <small class="text-body-secondary"><%= cart_item.introduction %></small>
                <%= link_to '削除', cart_item_path(cart_item), data: { turbo_method: :delete } %>
              </div>
              <span class="text-body-secondary"><%= cart_item.total_price_per_item %>円</span>
            </li>
          <% end %>
          <% if current_cart.promotion_code %>
            <li class="list-group-item d-flex justify-content-between bg-body-tertiary">
              <div class="text-success">
                <h6 class="my-0">Promo code</h6>
                <small><%= current_cart.promotion_code %></small>
              </div>
              <span class="text-success">−¥<%= current_cart.discount %></span>
            </li>
          <% end %>
          <li class="list-group-item d-flex justify-content-between">
            <span>Total (JPY)</span>
            <strong><%= current_cart.total_price %>円</strong>
          </li>
        </ul>
        <form class="card p-2">
          <div class="input-group">
            <%= form_with url: "/promotion_codes", method: :get do |f| %>
              <%= f.text_field :code, class: "form-control", placeholder: "Promo code" %>
              <%= f.submit "Redeem", class: "btn btn-secondary" %>
            <% end %>
          </div>
        </form>
      </div>
      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">請求先住所</h4>
        <%= form_with model: @order do |f| %>
          <%= render 'shared/error_messages', model: @order %>
          <div class="row g-3">
            <div class="col-sm-6">
              <%= f.label :first_name, "名前", class: "form-label" %>
              <%= f.text_field :first_name, class: 'form-control' %>
            </div>
            <div class="col-sm-6">
              <%= f.label :last_name, "名字", class: "form-label" %>
              <%= f.text_field :last_name, class: 'form-control' %>
            </div>
            <div class="col-12">
              <%= f.label :username, "ユーザー名", class: "form-label" %>
              <div class="input-group has-validation">
                <span class="input-group-text">@</span>
                <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
              </div>
            </div>
            <div class="col-12">
              <%= f.label :email, "メール (任意)", class: "form-label" %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'you@example.com' %>
            </div>
            <div class="col-12">
              <%= f.label :address, "住所", class: "form-label" %>
              <%= f.text_field :address, class: 'form-control', placeholder: '1234 Main St' %>
            </div>
            <div class="col-12">
              <%= f.label :address2, "住所 2 (任意)", class: "form-label" %>
              <%= f.text_field :address2, class: 'form-control', placeholder: 'Apartment or suite' %>
            </div>
            <div class="col-md-5">
              <%= f.label :country, "国", class: "form-label" %>
              <%= f.select :country, ["Choose...", "United States"], {}, class: 'form-select' %>
            </div>
            <div class="col-md-4">
              <%= f.label :state, "州", class: "form-label" %>
              <%= f.select :state, ["Choose...", "California"], {}, class: 'form-select' %>
            </div>
            <div class="col-md-3">
              <%= f.label :zip, "郵便番号", class: "form-label" %>
              <%= f.text_field :zip, class: 'form-control' %>
            </div>
          </div>
          <hr class="my-4">
          <div class="form-check">
            <%= f.check_box :shipping_address_same_flg, class: 'form-check-input' %>
            <%= f.label :shipping_address_same_flg, "Shipping address is the same as my billing address", class: 'form-check-label' %>
          </div>
          <div class="form-check">
            <%= f.check_box :save_info_flg, class: 'form-check-input' %>
            <%= f.label :save_info_flg, "Save this information for next time", class: 'form-check-label' %>
          </div>
          <hr class="my-4">
          <h4 class="mb-3">Payment</h4>
          <div class="my-3">
            <div class="form-check">
              <%= f.radio_button :payment_type, "Credit", checked: true %>
              <%= f.label :payment_type, "クレジットカード" %>
            </div>
          </div>
          <div class="row gy-3">
            <div class="col-md-6">
              <%= f.label :name_on_card, "カード名義人", class: "form-label" %>
              <%= f.text_field :name_on_card, class: 'form-control' %>
              <small class="text-body-secondary">Full name as displayed on card</small>
            </div>
            <div class="col-md-6">
              <%= f.label :credit_card_number, "カード番号", class: "form-label" %>
              <%= f.text_field :credit_card_number, class: 'form-control' %>
            </div>
            <div class="col-md-3">
              <%= f.label :expiration, "有効期限", class: "form-label" %>
              <%= f.text_field :expiration, class: 'form-control' %>
            </div>
            <div class="col-md-3">
              <%= f.label :cvv, "セキュリティコード", class: "form-label" %>
              <%= f.text_field :cvv, class: 'form-control' %>
            </div>
          </div>
          <hr class="my-4">
          <%= f.submit "購入する", class: 'w-100 btn btn-primary btn-lg' %>
        <% end %>
      </div>
    </div>
  </main>
  <footer class="my-5 pt-5 text-body-secondary text-center text-small">
    <p class="mb-1">&copy; 2017–2023 Company Name</p>
    <ul class="list-inline">
      <li class="list-inline-item"><a href="#">Privacy</a></li>
      <li class="list-inline-item"><a href="#">Terms</a></li>
      <li class="list-inline-item"><a href="#">Support</a></li>
    </ul>
  </footer>
</div>
