<div class="container">
  <%= form_with model: [:admin, item] do |f| %>
    <%= render 'shared/error_messages', item: item %>
    <div class="form-group mt-3">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
      <%= f.file_field :image %>
    </div>
    <div class="form-group mt-3">
      <%= f.label :introduction %>
      <%= f.text_area :introduction, class: 'form-control', size: "60x10" %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
