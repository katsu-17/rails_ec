<div class="container">
  <h1>注文一覧</h1>
  <% @orders.each do |order| %>
    <div class="mb-3">
      <div class="row border rounded bg-light">
        <div class="col">
          <div>
            <p>注文日時</p>
            <p><%= order.created_at.strftime("%Y 年 %m 月 %d 日 %H 時 %M分") %></p>
          </div>
        </div>
        <div class="col">
          <div>
            <p>合計</p>
            <p><%= order.total_price %>円</p>
          </div>
        </div>
        <div class="col">
          <div>
            <p>注文者</p>
            <p><%= order.last_name %> <%= order.first_name %></p>
          </div>
        </div>
        <div class="col"><%= link_to '詳細', admin_order_detail_path(order) %></div>
      </div>
      <% order.order_details.each do |order_detail| %>
        <div class="row border rounded align-items-center py-2">
          <div class="col-3"><%= order_detail.item_name %></div>
          <div class="col-3">数量：<%= order_detail.num %></div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
