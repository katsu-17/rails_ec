<%= render 'header' %>
<!-- Header-->
<header class="bg-dark py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder">Shop in style</h1>
      <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
    </div>
  </div>
</header>
<!-- Section-->
<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @items.each do |item| %>
        <div class="col mb-5">
          <div class="card h-100">
            <!-- Product image-->
            <%= link_to item_path(item.id) do %>
              <% if item.image.attached? %>
                <%= image_tag item.image.variant(resize_and_pad: [450, 300]), class: "card-img-top" %>
              <% else %>
                <%= image_tag 'https://dummyimage.com/450x300/dee2e6/6c757d.jpg', class: "card-img-top" %>
              <% end %>
              <!-- Product details-->
              <div class="card-body p-4">
                <div class="text-center">
                  <!-- Product name-->
                  <h5 class="fw-bolder"><%= item.name %></h5>
                <% end %>
                <!-- Product price-->
                <%= item.price %>å††
              </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <div class="text-center"><%= link_to 'Add to cart', cart_items_path(item_id: item, num: 1), data: { turbo_method: :post }, class: "btn btn-outline-dark mt-auto" %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<!-- Footer-->
<footer class="py-5 bg-dark">
  <div class="container">
    <p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p>
  </div>
</footer>
